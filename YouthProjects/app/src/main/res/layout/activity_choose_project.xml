<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vimos.karol.youthprojects.ChooseProject"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/image_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/photo_choose_android"
        android:layout_marginBottom="386dp"/>


    <ListView

        android:layout_marginTop="250dp"
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        >
    </ListView>

    <Button
        android:layout_width="match_parent"
        android:background="@color/lastMinuteColor"
        android:text="Last Minute"
        android:textColor="#FFFFFF"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp"
        android:id="@+id/lastMinuteBtn"
        android:onClick="lastMinuteClick"/>


</RelativeLayout>
