<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_blue_bck"
    tools:context="com.karol.vimos.vimosapp.ui.activities.ResetPasswordActivity">

    <TextView
        android:id="@+id/tv_reset_password_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_reset_pass_title"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_reset_pass_info1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_reset_password_info1"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_reset_password_title_id"
        android:layout_marginTop="55dp"
        android:layout_marginStart="25dp"
        />

    <EditText
        android:id="@+id/et_reset_pass_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/write_here"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:layout_below="@+id/tv_reset_pass_info1_id"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <TextView
        android:id="@+id/tv_reset_pass_info2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_reset_pass_id"
        android:text="@string/tv_reset_password_info2"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />

    <Button
        android:id="@+id/btn_reset_pass_id"
        android:background="@drawable/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reset_pass_info2_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_marginStart="85dp"
        android:textColor="#FFFFFF"
        android:text="@string/btn_send_reset_password"
        android:onClick="sendResetPassOnClick"
        />

</RelativeLayout>
